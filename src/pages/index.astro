import { ProductList } from '@/components';
import Upauto from '@/components/Frontend/Upauto.astro';
import Topbar from '@/components/Frontend/Topbar.astro';
import New from '@/components/Frontend/New.astro';


import Navbar from '@/components/shared/Navbar.astro';
import Pagination from '@/components/shared/Pagination.astro';
import MainLayout from '@/layouts/MainLayout.astro';
import { actions } from 'astro:actions';

const searchParams= Astro.url.searchParams;
const pageParam = Number(searchParams.get('page') ?? 1);

const { data, error } = await actions.getProductsByPage.safe({
  page: pageParam,
  limit:6,
});

if (error) {
  return Astro.redirect('/');
}

const {products, totalPages} = data;

if(data.products.length == 0){
  return Astro.redirect('/');
}
